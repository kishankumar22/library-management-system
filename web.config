<configuration>
  <system.webServer>
    <!-- iisnode handler -->
    <handlers>
      <add name="iisnode" path="server.js" verb="*" modules="iisnode" />
      <!-- WebDAV handler remove -->
      <remove name="WebDAV" />
    </handlers>

    <!-- Rewrite rules for Next.js -->
    <rewrite>
      <rules>
        <rule name="Next.js Routes" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="server.js" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>



